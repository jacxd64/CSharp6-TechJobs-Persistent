@model TechJobs6Persistent.ViewModels.AddJobViewModel

<h1>Add Job</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId"></label>
        <select asp-for="EmployerId" class="form-control" asp-items="Model.Employers"></select>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Job" class="btn btn-primary" />
</form>
<p><a asp-controller="Employer" asp-action="Add">Add a new employer</a></p>
